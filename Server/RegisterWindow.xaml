<Window x:Class="Server.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Regisztálás" Height="190" Width="210">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="UsernameLabel" Grid.Row="0" Margin="5, 2.5, 0, 2.5" Content="Felhasználónév:"/>
        <TextBox x:Name="UsernameTextBox"  Grid.Row="1" Margin="10, 2.5, 10, 2.5"/>
        <Label x:Name="PasswordLabel" Grid.Row="2" Margin="5, 2.5, 0, 2.5" Content="Jelszó:"/>
        <TextBox x:Name="PasswordTextBox"  Grid.Row="3" Margin="10, 2.5, 10, 2."/>
        <Button Name="SaveUserButton" Content="Felhasználó hozzáadása" Grid.Row="4" Height="23" HorizontalAlignment="Right" Margin="0,5,10,5" VerticalAlignment="Top" Width="150" Click="SaveUser_ButtonClick" />
    </Grid>
</Window>
