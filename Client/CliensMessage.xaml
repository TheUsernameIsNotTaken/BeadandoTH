<Window x:Class="Client.CliensMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CliensMessage" Height="300" Width="425"
        Closing="ClientsWindow_Closing" >
    <Grid Height="260">
        <TextBox Height="150" Margin="12,10,15.509,0" Name="messageTextBox" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,170,0,0" Name="textBox2" VerticalAlignment="Top" Width="300" />
        <Button Content="Küld" Height="23" HorizontalAlignment="Left" Margin="326,170,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="buttonSend_Click" />
        <Button Content="Beszélgetőpartner váltása" Height="23" HorizontalAlignment="Left" Margin="160, 200, 0, 0" Name="buttonList" VerticalAlignment="Top" Width="150" Click="buttonList_Click" />
        <Button Content="Fájl küldése" Height="23" HorizontalAlignment="Left" Margin="326, 200, 0, 0" Name="buttonOpen" VerticalAlignment="Top" Width="75" Click="buttonOpen_Click" />
        <Label Content="Chat: Publikus" HorizontalAlignment="Left" Margin="12,199,0,0" Name="labelList" VerticalAlignment="Top" Width="140" />
        <Button Content="Kilépés" Height="23" HorizontalAlignment="Left" Margin="326,230,0,0" Name="buttonLogout" VerticalAlignment="Top" Width="75" Click="buttonLogout_Click" />
    </Grid>
</Window>
